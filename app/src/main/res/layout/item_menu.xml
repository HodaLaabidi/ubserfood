<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:id="@+id/item_menu"
    android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:background="@drawable/background_item_menu"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/category_item_menu"
                android:layout_marginLeft="20dp"
                android:text="Category"
                android:textStyle="normal"
                android:textSize="16sp"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/expand_layout_item_menu"
                android:layout_marginTop="-5dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/expand_image_item_menu"
                    android:layout_weight="1"
                    android:src="@drawable/expand_less"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView

                android:id="@+id/recyler_view_category_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


    </LinearLayout>

