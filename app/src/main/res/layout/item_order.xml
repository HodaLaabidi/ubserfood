<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@android:color/white"
        android:padding="10dp"
        android:id="@+id/layout_item_order"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/add_order"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/remove_order"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/order_label"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="Your order"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="-8dp"
        android:layout_marginTop="-8dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_alignEnd="@+id/layout_item_order"
        android:background="@drawable/black_circule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/number_of_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="*1"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

    </LinearLayout>


</RelativeLayout>