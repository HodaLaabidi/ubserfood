<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lightWhite"
    android:animateLayoutChanges="true"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="20dp"
        android:id="@+id/layout_item_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/add_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/add_order" />

            <ImageView
                android:id="@+id/delete_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/remove_order" />

           <LinearLayout
               android:layout_weight="10"
               android:layout_width="0dp"
               android:layout_height="wrap_content">
               <android.support.v7.widget.AppCompatTextView
                   android:layout_weight="5"
                   android:id="@+id/order_label"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:text="Your order"
                   android:textSize="16sp" />
               <android.support.v7.widget.AppCompatTextView
                   android:visibility="gone"
                   android:textColor="@android:color/white"
                   android:background="@color/colorOrange"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:id="@+id/number_tv"
                   android:textSize="14sp"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content" />
               <android.support.v7.widget.AppCompatTextView
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:id="@+id/price_tv"
                   android:textSize="14sp"
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content" />
               <android.support.v7.widget.AppCompatTextView
                   android:visibility="gone"
                   android:background="@color/colorGreen"
                   android:layout_gravity="center"
                   android:textColor="@android:color/white"
                   android:gravity="center"
                   android:id="@+id/price_invisible"
                   android:textSize="14sp"
                   android:layout_weight="2"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content" />
           </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"

        android:id="@+id/ll_number_of_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/layout_item_order"
        android:layout_alignParentRight="true"
       android:gravity="center"
        android:background="@drawable/black_circule"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:gravity="center"
            android:layout_gravity="top"
            android:id="@+id/number_of_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="*1"
            android:textColor="@android:color/white"
            android:textSize="10sp" />

    </LinearLayout>






</RelativeLayout>