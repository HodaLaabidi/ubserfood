<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_color"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfilFragment">
    <LinearLayout
        android:gravity="left"
        android:layout_gravity="left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="left"
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="33dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@android:color/white"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/more"
               android:padding="3dp"
                android:layout_margin="5dp"
                android:layout_gravity="right"
                android:src="@drawable/notification_icon"
                android:layout_width="60dp"
                android:layout_height="30dp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:gravity="center_horizontal"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <com.mikhaellopez.circularimageview.CircularImageView
               android:elevation="10dp"
               android:layout_marginTop="20dp"
               android:id="@+id/profil_image"
               app:civ_border_color="@color/colorWhite"
               app:civ_border_width="2dp"
               app:civ_shadow="true"
               app:civ_shadow_radius="15"
               app:civ_shadow_color="@color/colorWhite"
               android:transitionName="image_transition"
               android:scaleType="centerCrop"
               android:src="@drawable/person"
               android:layout_width="160dp"
               android:layout_height="160dp" />
           <android.support.v7.widget.AppCompatTextView
               android:id="@+id/username_profil"
               android:textSize="18sp"
               android:gravity="center_horizontal"
               android:layout_below="@+id/profil_image"
               android:textColor="@color/colorWhite"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <android.support.v7.widget.AppCompatTextView
               android:id="@+id/email_profil"
               android:textSize="18sp"
               android:gravity="center_horizontal"
               android:layout_below="@+id/username_profil"
               android:textColor="@color/colorWhite"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </LinearLayout>

        <LinearLayout
            android:id="@+id/disconnect_button"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
           android:layout_marginBottom="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:background="@drawable/background_white_button"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="@string/logout"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>