<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="130dp">


    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/background_item_menu"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:gravity="center"
            android:layout_gravity="center"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_category_menu_image"
            android:src="@drawable/chiken_pizza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
           <android.support.v7.widget.AppCompatTextView
               android:id="@+id/item_menu_label"
               android:textColor="@color/colorBlack"
               android:text="label"
               android:textSize="18dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatTextView
                android:textStyle="italic"
                android:id="@+id/item_menu_description"
                android:text="  Description : bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla bla"
                android:textSize="14dp"
                android:textColor="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_menu_price"
                android:text="Price : $20.00"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="5dp"
                android:id="@+id/add_icon"
                android:layout_marginLeft="5dp"
                android:src="@drawable/add_icon"
                android:layout_width="35dp"
                android:layout_height="40dp" />


    </LinearLayout>
    </LinearLayout>

</LinearLayout>