<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_color"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_marginBottom="45dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:padding="3dp"
            android:layout_margin="20dp"
            android:background="@drawable/background_white_edittext"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <android.support.v7.widget.AppCompatEditText
                android:paddingLeft="7dp"
                android:id="@+id/et-search"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14sp"
                android:backgroundTint="@android:color/transparent"
                android:hint="@string/hint_search_text_from_search_activity"
                android:layout_width="0dp"
                android:layout_weight="14"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/filter_icon"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/filter"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/background_grey_stroke"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="25dp">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/location_icon"
                    android:layout_width="23dp"
                    android:layout_height="25dp" />
            </LinearLayout>

        </LinearLayout>

        <lib.kingja.switchbutton.SwitchMultiButton
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/switch_multi_button_from_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:strokeRadius="5dp"
            app:strokeWidth="1dp"
            app:selectedTab="0"
            app:disableColor="@color/colorOrange"
            app:selectedColor="@color/colorOrange"
            app:switchTabs="@array/switch_tabs"
            app:textSize="16sp" />


        <android.support.v4.view.ViewPager
            android:layout_gravity="center"
            android:id="@+id/home_fragment_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



        <FrameLayout
            android:visibility="gone"
            android:background="@color/colorLightGrey"
            android:id="@+id/fragment_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>