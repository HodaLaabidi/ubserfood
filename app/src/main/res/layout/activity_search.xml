<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    android:layout_height="match_parent"
    tools:context=".activities.SearchActivity">


    <LinearLayout
        android:padding="5dp"
        android:layout_margin="20dp"
        android:background="@drawable/background_white_edittext"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <android.support.v7.widget.AppCompatEditText
            android:paddingLeft="7dp"
            android:id="@+id/et-search"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp"
            android:backgroundTint="@android:color/transparent"
            android:hint="@string/hint_search_text_from_search_activity"
            android:layout_width="0dp"
            android:layout_weight="14"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/filter"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>

        <!--  -->
       <LinearLayout
           android:background="@drawable/background_grey_stroke"
           android:gravity="center"
           android:layout_marginRight="10dp"
           android:layout_gravity="center"
           android:layout_width="30dp"
           android:layout_height="30dp">
           <ImageView
               android:layout_gravity="center"
               android:src="@drawable/location_icon"
               android:layout_width="23dp"
               android:layout_height="23dp" />
       </LinearLayout>

    </LinearLayout>

    <lib.kingja.switchbutton.SwitchMultiButton
        android:padding="5dp"
        android:layout_margin="20dp"
        android:id="@+id/switch_multi_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:strokeRadius="5dp"
        app:strokeWidth="1dp"
        app:selectedTab="0"
        app:disableColor="@color/colorOrange"
        app:selectedColor="@color/colorOrange"
        app:switchTabs="@array/switch_tabs"
        app:textSize="16sp" />


    <android.support.v4.view.ViewPager
        android:id="@+id/search_activity_view_pager"
        android:layout_width="match_parent"
        android:layout_height="500dp"/>



    <FrameLayout
        android:visibility="gone"
        android:background="@color/colorLightGrey"
        android:id="@+id/fragment_pack"
        android:layout_width="match_parent"
       android:layout_height="match_parent"/>


</LinearLayout>