<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/gray_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MenuActivity">
    <ScrollView
        android:nestedScrollingEnabled="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:transitionName="image_transition"
                        android:id="@+id/logo_restaurant"
                        android:scaleType="fitXY"
                        android:src="@drawable/slider_3"
                        android:layout_width="match_parent"
                        android:layout_height="220dp" />
                    <android.support.v7.widget.CardView
                        android:layout_marginLeft="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="115dp"

                        android:elevation="15dp"
                        app:cardCornerRadius="10dp"
                        android:layout_width="90dp"
                        android:layout_height="90dp">

                        <ImageView
                            android:id="@+id/image_item_delivery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/slider_3"
                            android:transitionName="image_transition" />

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:id="@+id/arrow_back_from_restaurant_infos_activity"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/background_menu_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView

                            android:layout_width="35dp"
                            android:layout_height="35dp"

                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/arrow_back" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/panier"
                        android:layout_margin="20dp"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/background_menu_icon"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/price_from_informations_activity"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:layout_gravity="center"
                            android:textColor="@color/colorWhite"
                            android:text="0 DT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:padding="3dp"
                            android:src="@drawable/shopping_cart"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/restaurant_name_informations_activity"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:text="Pizza Hut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RatingBar
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:outlineAmbientShadowColor="@color/colorOrange"
                    android:layout_gravity="left"
                    android:outlineSpotShadowColor="@color/colorOrange"
                    android:id="@+id/ratingBar"
                    style="@android:style/Widget.Holo.RatingBar.Small"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:max="5"
                    android:numStars="5"
                    android:rating="2"
                    android:stepSize="0.5"
                    android:visibility="visible" />
                <android.support.v7.widget.AppCompatTextView
                    android:text="(258)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <android.support.v7.widget.AppCompatTextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorBlack"
                android:text="@string/open_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:text="@string/schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_marginTop="3dp"
                            android:text="@string/sun"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:gravity="right"
                            android:layout_marginTop="3dp"
                            android:text="16:00 to 21:00"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_marginTop="3dp"
                            android:text="@string/mon"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:gravity="right"
                            android:layout_marginTop="3dp"
                            android:text="16:00 to 21:00"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_marginTop="3dp"
                            android:text="@string/tue"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:gravity="right"
                            android:layout_marginTop="3dp"
                            android:text="16:00 to 21:00"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_marginTop="3dp"
                            android:text="@string/wed"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:gravity="right"
                            android:layout_marginTop="3dp"
                            android:text="16:00 to 21:00"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_marginTop="3dp"
                            android:text="@string/thu"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:gravity="right"
                            android:layout_marginTop="3dp"
                            android:text="16:00 to 21:00"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_marginTop="3dp"
                            android:text="@string/fri"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:gravity="right"
                            android:layout_marginTop="3dp"
                            android:text="16:00 to 21:00"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_marginTop="3dp"
                            android:text="@string/sat"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:gravity="right"
                            android:layout_marginTop="3dp"
                            android:text="16:00 to 21:00"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.AppCompatTextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorBlack"
                android:text="@string/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorBlack"
                android:text="@string/gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.example.uberfood.utils.ExpandableHeightGridView
                android:scrollbars="none"
                android:id="@+id/gv_from_infos_activity"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:columnWidth="220dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="20dp"
                android:numColumns="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.example.uberfood.utils.ExpandableHeightGridView>

            <android.support.v7.widget.AppCompatTextView
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:textColor="@color/colorBlack"
                android:text="@string/feedback"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/ll_image_slider"
                android:background="@color/transparent_background"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                    android:layout_margin="10dp"
                    android:id="@+id/view_pager_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"/>
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/circle_indicator_gallery_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>



            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    </LinearLayout>

